@model WebApplication1.Models.Calc

<h4>Simple Calculator</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="value1" class="control-label">First Number</label>
                <input asp-for="value1" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="value2" class="control-label">Second Number</label>
                <input asp-for="value2" class="form-control" />

            </div>

            <div class="form-group">
                <input type="submit" asp-for="calculate" value="Add" class="btn btn-primary" />
                <input type="submit" asp-for="calculate" value="Sub" class="btn btn-primary" />
            </div>
            <div class="form-group">
               
                
                <div class="alert alert-success" role="alert">
                    <h5>Answer = @ViewData["result"]</h5>
                    
                </div>
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
